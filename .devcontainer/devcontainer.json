{
    "name": "Shuttle Playground",
    "image": "mcr.microsoft.com/devcontainers/rust:1",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "serayuzgur.crates"
            ]
        }
    },
    "postCreateCommand": "curl --proto '=https' --tlsv1.2 -sSf https://shuttle.rs/install.sh | bash -s -- --no-modify-path && cargo install shuttle-cli",
    "forwardPorts": [8000],
    "remoteUser": "vscode"
} 